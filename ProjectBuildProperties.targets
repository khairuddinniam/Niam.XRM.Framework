<Project>
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\open-source.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
  </PropertyGroup>
  
  <PropertyGroup>
    <Version>0.0.2.1</Version>
    <PackageId>$(AssemblyName)</PackageId>
    <Title>$(AssemblyName)</Title>
    <Description>$(AssemblyName)</Description>
    <Company>Khairuddin Ni'am</Company>
    <Authors>Khairuddin Ni'am</Authors>
    <Product>Niam.XRM.Framework</Product>
    <Copyright>2017</Copyright>
    <PackageTags>Dynamics 365</PackageTags>
    <PackageReleaseNotes>Dynamics 365 Framework</PackageReleaseNotes>

    <PackageOutputPath>$(SolutionDir)build\packages</PackageOutputPath>
  </PropertyGroup>
</Project>